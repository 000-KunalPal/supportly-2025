{
    "extends": "@workspace/typescript-config/base.json",
    "compilerOptions": {
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "target": "ES2020",
      "moduleResolution": "bundler",
      "noEmit": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "strict": true
    },
    "include": [
      "embed.ts",
      "vite.config.ts",
      "vite-env.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ]
  }
  